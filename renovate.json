{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    ":assignAndReview(@waveFrontSet)"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/helmrelease\\.yaml$/",
      "/helmrepo\\.yaml$/"
    ]
  },
  "pre-commit": {
    "enabled": true
  },
  "ignorePaths": [
    "**/flux-system/**"
  ]
}
